<Window x:Class="Game.Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.Snake"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="711" MaxWidth="711" MaxHeight="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="317*"/>
        </Grid.RowDefinitions>
        <Canvas Name="Bildschrim" HorizontalAlignment="Left" Height="360" Margin="41,22,0,0" VerticalAlignment="Top" Width="500" Background="#FFC9C9C9" Grid.RowSpan="2"/>
        <Label x:Name="lblScore" Content="0" HorizontalAlignment="Left" Margin="560,225,0,0" VerticalAlignment="Top" FontFamily="Showcard Gothic" FontSize="36" RenderTransformOrigin="3.7,-1.11" Grid.Row="1"/>
        <Label x:Name="lblMaxScore" Content="0" HorizontalAlignment="Left" Margin="560,22,0,0" VerticalAlignment="Top" FontFamily="Showcard Gothic" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="360" Margin="41,22,0,0" VerticalAlignment="Top" Width="500" Grid.RowSpan="2"/>
    </Grid>
</Window>
